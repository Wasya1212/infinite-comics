block scripts
  script(src="libs/slick-1.8.0/slick/slick.min.js")
  script(src="javascripts/news.js")

mixin intro(slides)
  +b.SECTION.intro
    each slide in slides
      +b.DIV.main-news
        +e.IMG(src= slide.imagePath, alt= slide.name)
        +e.P.title.title
          +e.A(href= slide.link)= slide.title

mixin videoNews(news)
  +b.DIV.news
    +e.video.video-container
      +e.VIDEO(src= news.video.path, type= news.video.type, controls)
    +e.P.title.title
      +e.A(href= news.link)= news.title

mixin news(news)
  +b.DIV.news(size= news.size || 'medium')
    +e.A(href= news.link)
      +e.PICTURE.poster
        +e.IMG(src= news.imagePath, alt= news.name)
    +e.DIV.info.info
      +e.A(href= news.link)
        +e.P.title= news.title
      +e.P.description= news.description
    - if (news.meta)
      +e.DIV.meta.meta
        +e.SPAN.author= news.meta.author
        +e.span.date= news.meta.date

block content
  +intro(introSlides)
  +b.MAIN.content
    +b.SECTION.video-news
      +e.H3.title Main Video News
      +e.DIV.content.content
        each news in videoNews
          +videoNews(news)
    +b.SECTION.short-news
      +e.H3.title Main today
      +e.DIV.content.content
        each news in shortNews
          +news(news)
    +b.SECTION.latest-news
      +e.H3.title Latest news
      +e.DIV.content.content
        each news in latestNews
          +news(news)
      
