include ../_assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })

block vars

html(lang="en")
  head
    meta(name="viewport", content="width=device-width")
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    style(type="text/css").
      .mail-header, .mail-footer {
        background-color: #161616;
        padding: 0 1rem;
      }
      
      .main-title {
        font-weight: bold;
        text-transform: uppercase;
        color: white;
        padding: .5rem 2rem .5rem .5rem;
        background-color: #161616;
      }
      
      .logo {
        max-width: 200px;
      }
      
      p {
        font-family: sans-serif;
        font-size: 14px;
        text-indent: 2ch;
      }
      
      p strong::after {
        content: ':';
        display: inline-block;
        margin-right: 1ch;
      }
      
      strong, span {
        font-family: inherit;
      }
  body
    +b.HEADER.mail-header
      +e.DIV.intro
        +b.DIV.logo
          +e.A(href="http://localhost:3000")
            +e.IMG.picture(src="./images/logo/logo.png")
    block content
    +b.FOOTER.mail-footer
